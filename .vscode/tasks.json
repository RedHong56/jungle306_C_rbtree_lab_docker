{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-and-test",
            "type": "shell",
            // "command": "cd ${workspaceFolder}/rbtree_lab; make -C test",// "command": "cd ${workspaceFolder}/rbtree_lab && make clean", //&& 리눅스에서 git bash로 해도 가능
            "command": "cd ${workspaceFolder}/rbtree_lab && make -C test test-rbtree",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/rbtree_lab"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            // "command": "cd ${workspaceFolder}/rbtree_lab; make -C test",// "command": "cd ${workspaceFolder}/rbtree_lab && make clean", //&& 리눅스에서 git bash로 해도 가능
            "command": "cd ${workspaceFolder}/rbtree_lab && make clean",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/rbtree_lab"
            }
        }
    ]
}